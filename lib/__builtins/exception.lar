//一个基本的常用异常的实现：仅包含一个字符串info
public class Exception
{
    public Exception(String s)
    {
        info = s;
    }

    public String to_str()
    {
        return info;
    }

    String info;
}

//这里是通用的一些内建异常类型

public class ValueError
{
    public ValueError(String s)
    {
        e = new Exception("ValueError: ".concat(s));
    }

    usemethod Exception e;
}
